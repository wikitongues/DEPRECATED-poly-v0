.page.book
  background #fafafa
  width 100% !important
  max-width 100% !important
  padding-top 0
  padding-bottom 0
  float left

  a.back
    float left

  .document
    border-radius $radius
    background #f4f4f4
    border 1px solid #e8e8e8
    margin 20px  auto
    width 350px
    height 600px
    overflow-x hidden
    overflow-y scroll
    box-shadow 0 5px 4px 1px rgba(0,0,0,.1)

    section.banner
      border none
      height 220px
      width 100%

      &:hover
        height 230px
        transition height ease-in-out 2*$transition-time

        img
          margin-top -25%
          transition margin-top ease-in-out 2*$transition-time

      img
        margin-top -23%

    nav
      width 100%
      position initial
      top initial
      background #fff
      border-bottom 2px solid #e0e0e0
      z-index 5

      &.top-navigation
        height 40px

        p
          float left
          display block
          width auto
          margin 0
          padding 0.5em 1em

        &:hover
          margin-top 0

        .rightSubNav
          float right

          .moreNavItems
            height 40px
            width 120px
            position absolute
            margin-left -120px
            display none

            a
              position static
              float left

        a
          cursor pointer
          padding 11px
          height 40px
          width 40px
          text-align center
          display block
          float left
          color $blue
          background-image url("../img/poly-icons.svg") !important
          background-size 240px
          transition background-position-y
          background-position-y -2px

          &:hover
            background-position-y -43px
            transition background-position-y 0s linear

          &[title~="Share"]
            background-position-x -40px

          &[title~="Embed"]
            background-position-x -80px

          &[title~="More"]
            background-position-x -160px

          &[title~="Location"]
            background-position-x -120px

          &[title~="Settings"]
            background-position-x -160px

            &:hover
              transform rotate(-.25turn)
              transition transform $transition-time ease-in-out

      &.language-navigation
        border-bottom 3px solid #e0e0e0

        &.sticky
          h1
            font-size 0.8em

          a.direction
            font-size 0.7em
            margin-top 3px
            padding 4px
            height 18px
            width 18px

        a.direction
          color $hover
          width 6%
          float left
          font-size 1.8em
          font-weight bold
          text-align center
          height 22px
          padding 0
          line-height 1.1em
          border-radius 100%
          font-size 1.4em
          margin-top 0.7em

        h1
          cursor pointer
          width 47%
          float left
          margin 0
          font-size 1.6em

          a
            height 100%
            padding .4em .8em
            display block
            text-transform capitalize


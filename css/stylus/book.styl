      ul.entries
        font-family 'Open Sans', sans-serif
        clear both
        width 100%
        padding 0
        font-size 0.6em
        background #fafafa

        p.empty
          text-align center
          color $secondary-blue
          margin-bottom 180px

        li.entry
          width 100%
          display inline-block
          padding 1em 0

          &:last-of-type
            border-bottom none

          &:hover
            background #f6f6f6

          ul
            display inline-block
            width 100%
            padding 0

            li
              display inline-block
              width 100%
              float left

              &:hover
                .options-wrapper
                    width 120px

              p
                width initial
                display inline-block
                margin 0
                padding .7em 1em
                position relative
                z-index 1

                &:hover
                  cursor pointer
                  box-shadow 0 3px 4px 1px #ccc

              &.source
                p
                  box-shadow 0 3px 4px 0 #ddd
                  border-radius 21px 21px 21px 0
                  float left
                  background #C4CDD1
                  border darken(#C4CDD1, 5%)
                  margin-left .5em

                  &:hover
                    background darken(#C4CDD1, 10%)

                .options-wrapper
                  margin-left -20px
                  float left

                  .options
                    border-radius 0 22px 22px 0
                    margin-left -220px
                    padding-left 40px
                    float left

                &:hover
                  .options-wrapper
                    .options
                      margin-left -20px

                span.circle
                  float left
                  margin-right 0

              &.target
                p
                  box-shadow 0 3px 4px 0 #ccc
                  border-radius 21px 21px 0 21px
                  float right
                  background #BBDBFD
                  border-color 1px solid darken(#BBDBFD, 40%)
                  margin-right .5em


                  &:hover
                    background darken(#bbdbfd, 10%)

                .options-wrapper
                  margin-right -20px
                  float right

                  .options
                    border-radius 22px 0 0 22px
                    margin-right -220px
                    padding-right 40px
                    float right

                &:hover
                  .options-wrapper
                    .options
                      margin-right -20px

                span.circle
                  float right
                  margin-left 0

              span.circle
                margin 1.2em .5em
                border-radius 100%
                width 10px
                height 10px
                float left
                border 1px solid #C5C9CB
                display block

                &:hover
                  cursor pointer
                  background #C5C9CB

              .options-wrapper
                width 0
                overflow hidden
                display inline-block
                height 47px

                .options
                  width 124px
                  display inline-block
                  background #fff
                  border darken(#f9f9f9, 7%)
                  box-shadow 0 2px 3px 0 #ddd
                  position relative
                  z-index 0

                  a
                    cursor pointer
                    display inline-block
                    float left
                    border-radius 100%
                    padding 5px
                    border 1px solid transparent

                    img
                      float left
                      height 30px
                      width 30px

                    &:hover
                      background #ededed

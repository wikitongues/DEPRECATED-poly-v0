.books
  background #fafafa
  width 100% !important
  max-width 100% !important
  display inline-block
  font-family "Open sans", "helvetica", sans-serif

  .appContainer
    margin auto
    min-height 450px
    padding 0 50px
    width 1240px !important
    max-width 1240px !important

    p
      margin 1em 1em 0 1em
      font-family "lora"
      font-style italic
      color $blue

    .app
      float left
      display inline-block
      border-radius $radius
      background #f4f4f4
      border 1px solid #e8e8e8
      margin 20px 15px
      width 350px
      height 350px
      overflow hidden
      box-shadow 0 5px 4px 1px rgba(0,0,0,.1)

      section.presentation
        background white
        padding 0.6em 0.8em
        height 50px

        h2
          margin 0
          font-size 1.2em
          float left
          max-width 280px
          overflow hidden
          display inline
          white-space nowrap
          text-overflow ellipsis
          height 32px

        p.number
          font-family "Open sans", "helvetica", sans-serif
          float right
          display inline-block
          width initial
          margin 0
          font-size 0.8em

      .banner
        border none
        height 250px
        width 100%

      nav
        width 100%
        position initial
        top initial
        background #fff

        &.top-navigation
          margin-top -33px
          height 40px

          &:hover
            margin-top 0

          a
            padding 11px
            height 40px
            width 40px
            text-align center
            display block
            float left
            color $blue

            &:hover
              background lighten($hover, 40%)

        &.language-navigation
          border-bottom 3px solid darken(#F4F4F4, 4%)

          &.sticky
            h1
              font-size 0.8em

            a.direction
              font-size 0.7em
              margin-top 3px
              padding 4px
              height 18px
              width 18px

          a.direction
            color $hover
            width 6%
            float left
            font-size 1.8em
            font-weight bold
            text-align center
            height 22px
            padding 0
            line-height 1.1em
            border-radius 100%
            font-size 1.4em
            margin-top 0.6em

          h1
            width 47%
            float left
            margin 0
            font-size 1.4em

            a
              text-align center
              height 100%
              padding .4em .8em
              display block
              text-transform capitalize